#!/usr/bin/env node
'use strict';

var program  = require('commander');
var fs = require('fs');
var http = require('http');

//require('autocmdr/lib/completion')(program);


program
	.version('0.0.1');

program
	.option('-t, --token', 'Set Yo API token')
	.option('-a, --all', 'Yo all subscribers')
	.option('-l, --link', 'Yo an image or link');

program
	.parse(process.argv);

if (!program.args.length) {
  program.outputHelp();
  process.exit(1);
}

// if no ~/.yo-cli error
// else make ~/.yo-cli and write api token to it


var username = program.args[0];
console.log(username);


// make post request to Yo API endpoint

